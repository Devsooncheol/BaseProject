<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BaseProject" parent="Base.Theme.BaseProject" />

    <!-- Base application theme. -->
    <style name="Base.Theme.BaseProject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_100</item>
        <item name="colorSecondaryVariant">@color/blue_gray_50</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your light theme here. -->
        <item name="toolbarStyle">@style/toolBar</item>

        <item name="android:textAllCaps">false</item>
    </style>

    <style name="toolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bottomNaviTextActive" parent="textStyleDetail2"></style>

    <style name="bottomNaviTextInactive" parent="textStyleDetail1"></style>

    <style name="baseText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/selector_text</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="textStyleDetail1" parent="baseText">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="textStyleDetail2" parent="baseText">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="toolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/text</item>
        <item name="titleTextAppearance">@style/toolbarTitleText</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="baseBtn" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="defaultBtn" parent="baseBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textAppearance">@style/defaultBtnText</item>
        <item name="android:background">@drawable/selector_btn_round_a</item>
    </style>

    <style name="defaultBtn2" parent="defaultBtn">
        <item name="android:background">@drawable/selector_btn_round_b</item>
        <item name="android:textAppearance">@style/defaultBtnText2</item>
    </style>

    <style name="defaultBtnText" parent="baseText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/selector_btn_a_text</item>
    </style>

    <style name="defaultBtnText2" parent="defaultBtnText">
        <item name="android:textColor">@color/dark_blue_grey</item>
    </style>



</resources>