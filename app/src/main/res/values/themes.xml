<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BaseProject" parent="Base.Theme.BaseProject" />

    <!-- Base application theme. -->
    <style name="Base.Theme.BaseProject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_100</item>
        <item name="colorSecondaryVariant">@color/blue_gray_50</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your light theme here. -->
        <item name="toolbarStyle">@style/toolBar</item>

        <item name="android:textAllCaps">false</item>
    </style>

    <style name="toolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="toolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/text</item>
        <item name="titleTextAppearance">@style/toolbarTitleText</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="contentInsetStart">0dp</item>
    </style>



</resources>